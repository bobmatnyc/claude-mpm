{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/claude_mpm/dashboard/static/*"],
      "@components/*": ["src/claude_mpm/dashboard/static/js/components/*"],
      "@react/*": ["src/claude_mpm/dashboard/react/*"]
    }
  },
  "include": [
    "src/claude_mpm/dashboard/react/**/*",
    "src/claude_mpm/dashboard/static/**/*.ts",
    "src/claude_mpm/dashboard/static/**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}